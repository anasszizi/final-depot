<h1></h1>
<div class="w3-container">
  <p class= "w3-xxlarge">Our Products : </p>
</div>
</div>
<table class="w3-table-all">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= strip_tags(product.description) %></td>
        <td><%= image_tag(product.image_url) %>
        <%= number_to_currency(product.price) %>
        <%= button_to 'Add to Cart', line_items_path(product_id: product), class:"w3-button w3-light-gray w3-border" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
